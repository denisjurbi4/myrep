program AvgMainDiagonal;

uses crt;                { Підключення модуля для роботи з екраном }

const
  N = 4;                 { Розмір квадратного масиву }

var
  A: array[1..N,1..N] of Integer; { Двовимірний масив }
  i, j: Integer;         { Лічильники циклів }
  sum: Real;             { Змінна для суми елементів }

begin
  clrscr;                { Очищення екрана }
  Randomize;             { Запуск генератора випадкових чисел }

  { Заповнення масиву випадковими числами від -1000 до 1000 }
  for i := 1 to N do
    for j := 1 to N do
      A[i,j] := Random(2001) - 1000;

  sum := 0;              { Початкове значення суми }

  { Додавання елементів головної діагоналі }
  for i := 1 to N do
    sum := sum + A[i,i];

  { Виведення середнього арифметичного }
  writeln('Середнє арифметичне: ', (sum / N):0:2);

  readln;                { Затримка закриття програми }
end.
