program AverageMainDiagonal;  { Оголошення назви програми }

uses crt;  { Підключення модуля для роботи з консоллю }

const
  N = 4;  { Розмір квадратного масиву (4x4) }

var
  A: array[1..N, 1..N] of Integer;  { Оголошення квадратного масиву цілих чисел }
  i, j: Integer;                    { Лічильники для циклів }
  sum: Real;                         { Змінна для суми елементів головної діагоналі }
  average: Real;                     { Змінна для збереження середнього арифметичного }

begin
  clrscr;  { Очищення екрану консолі }

  { Введення елементів масиву }
  writeln('Введіть елементи ', N, 'x', N, ' масиву:');  { Повідомлення користувачу }
  for i := 1 to N do              { Цикл по рядках }
    for j := 1 to N do            { Цикл по стовпцях }
    begin
      write('A[', i, ',', j, '] = ');  { Підказка для введення конкретного елемента }
      readln(A[i, j]);                  { Зчитування значення елемента з консолі }
    end;

  { Обчислення суми елементів головної діагоналі }
  sum := 0;  { Ініціалізація суми нулем }
  for i := 1 to N do
    sum := sum + A[i, i];  { Додаємо елемент головної діагоналі до суми }

  { Обчислення середнього арифметичного }
  average := sum / N;  { Середнє = сума діагоналі / кількість елементів }

  writeln('Середнє арифметичне елементів головної діагоналі: ', average:0:2);  
  { Вивід результату з двома знаками після коми }

  readln;  { Затримка програми, щоб побачити результат }
end.